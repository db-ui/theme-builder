{
  "name": "theme-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "copy": "npm-run-all copy:*",
    "copy:404": "ncp dist/index.html dist/404.html",
    "copy:customization": "ncp dist/index.html dist/customization.html",
    "copy:playground": "ncp dist/index.html dist/playground.html",
    "copy:demo": "ncp dist/index.html dist/demo.html",
    "build": "tsc && vite build",
    "dev": "vite --open",
    "generate:parse-options": "node scripts/generateParseOptions.js",
    "generate:tailwind": "tailwindcss -i ./src/tailwind.css -o ./src/components/Editor/tailwind.generated.css --full --minify",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "postbuild": "npm run copy",
    "prepare": "husky",
    "preview": "vite preview"
  },
  "dependencies": {
    "@craftjs/core": "^0.2.4",
    "@db-ui/react-components": "0.0.64-palette4-722377c",
    "@redux-devtools/extension": "^3.3.0",
    "@types/node": "^20.11.24",
    "ace-builds": "1.32.6",
    "apca-w3": "^0.1.9",
    "chroma-js": "^2.4.2",
    "hsluv": "^1.0.1",
    "html-react-parser": "^5.1.8",
    "husky": "9.0.11",
    "i18next": "23.10.0",
    "i18next-browser-languagedetector": "7.2.0",
    "i18next-http-backend": "2.5.0",
    "jszip": "^3.10.1",
    "lz-string": "1.5.0",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "react-ace": "10.1.0",
    "react-dom": "^18.2.0",
    "react-i18next": "14.0.5",
    "react-router-dom": "6.22.1",
    "traverse": "^0.6.8",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@types/apca-w3": "^0.1.3",
    "@types/chroma-js": "^2.4.4",
    "@types/react": "^18.2.60",
    "@types/react-color": "^3.0.12",
    "@types/react-dom": "^18.2.19",
    "@types/traverse": "^0.6.36",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  }
}
