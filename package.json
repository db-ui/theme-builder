{
  "name": "theme-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "copy": "npm-run-all copy:*",
    "copy:404": "ncp dist/index.html dist/404.html",
    "copy:customization": "ncp dist/index.html dist/customization.html",
    "copy:playground": "ncp dist/index.html dist/playground.html",
    "copy:demo": "ncp dist/index.html dist/demo.html",
    "build": "tsc && vite build",
    "dev": "vite --open",
    "generate:parse-options": "node scripts/generateParseOptions.js",
    "generate:tailwind": "tailwindcss -i ./src/tailwind.css -o ./src/components/Editor/tailwind.generated.css --full --minify",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "postbuild": "npm run copy",
    "prepare": "husky",
    "preview": "vite preview"
  },
  "dependencies": {
    "@craftjs/core": "^0.2.6",
    "@db-ui/react-components": "0.1.5",
    "@redux-devtools/extension": "^3.3.0",
    "@tiptap/extension-color": "^2.4.0",
    "@tiptap/extension-text-style": "^2.4.0",
    "@tiptap/extension-underline": "^2.4.0",
    "@tiptap/pm": "^2.4.0",
    "@tiptap/react": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "@types/node": "^20.12.12",
    "ace-builds": "1.34.2",
    "apca-w3": "^0.1.9",
    "chroma-js": "^2.4.2",
    "dompurify": "^3.1.4",
    "hsluv": "^1.0.1",
    "html-react-parser": "^5.1.10",
    "husky": "9.0.11",
    "i18next": "23.11.5",
    "i18next-browser-languagedetector": "8.0.0",
    "i18next-http-backend": "2.5.2",
    "jszip": "^3.10.1",
    "lz-string": "1.5.0",
    "prettier": "3.2.5",
    "react": "^18.3.0",
    "react-ace": "11.0.1",
    "react-dom": "^18.3.1",
    "react-i18next": "14.1.2",
    "react-router-dom": "6.23.1",
    "traverse": "^0.6.9",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/apca-w3": "^0.1.3",
    "@types/chroma-js": "^2.4.4",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.3",
    "@types/react-color": "^3.0.12",
    "@types/react-dom": "^18.3.0",
    "@types/traverse": "^0.6.36",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "sass": "^1.77.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  }
}
